<style>
/* Search Button */
.search-btn {
    background-color: #C70039;
    color: #fff;
    border-radius: 30px;
    padding: 0 1rem;
    display: flex; 
    align-items: center;
}

.search-btn:hover {
    background-color: #C70039;
    color: #fff;
}

.search-btn i {
    margin-right: 0.8rem;
}


.search-inp {
    border-radius: 25px;
    padding: 0.8rem 9rem;
    font-size: 1rem;
}

/* Sticky Bottom Navigation Bar */
.bottom-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: white;
    border-top: 1px solid #ddd;
    display: flex;
    justify-content: space-around;
    padding: 10px 0;
    box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
    z-index: 1000;
}

/* Bottom Navbar Links */
.bottom-nav a {
    text-align: center;
    color: black;
    text-decoration: none;
    font-size: 14px;
    flex: 1;
    padding: 8px 0;
}

.bottom-nav i {
    display: block;
    font-size: 18px;
}
@media (max-width: 768px) {  
   

    .search-inp {
        margin-top: 0.7rem;
        width: 80%; /* Mobile madhe width adjust */
        padding: 0.4rem 4rem; /* Mobile madhe thoda compact */
        font-size: 0.9rem;
    }

    .search-btn {
        margin-top: 0.7rem;
        padding: 0.3rem 0.5rem; 
        font-size: 0.9rem;
    }

    .bottom-nav {
        bottom: 0; 
        padding: 12px 0; 
    }
}
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center" href="/listings">
        <img src="/images/Logo2.png" alt="CozyCrib Logo" width="150"><strong>CozyCrib</strong>
    </a>

    <a class="nav-link" href="/listings" class="me-2">Explore</a>

     
      <form class="d-flex needs-validation mx-auto"  id="searchForm"  method="GET">
          <input 
              class="form-control me-2 search-inp" 
              type="search" 
              name="q" 
              placeholder="Search destinations" 
              aria-label="Search"
              required
          >
          <div class="invalid-feedback">Destination is required</div>
          <button class="btn search-btn" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
      </form>

   
      <div class="navbar-nav ms-auto d-none d-md-flex ">
         
          <a class="nav-link" href="/listings/new">Create a New Stay</a>

          <% if(!currUser){ %>
              <a class="nav-link" href="/signup"><b>SignUp</b></a>
              <a class="nav-link" href="/login"><b>LogIn</b></a>
          <% } %>

          <% if(currUser){ %>
              <a class="nav-link" href="/logout"><b>LogOut</b></a>
          <% } %>
      </div>
  </div>
</nav>

<!-- Sticky Bottom Navigation Bar (Only for Mobile) -->
<div class="bottom-nav d-md-none">
  <a href="/listings">
      <i class="fa-solid fa-compass"></i>
      <span>Explore</span>
  </a>
  <a href="/login">
      <i class="fa-solid fa-user"></i>
      <span>Login</span>
  </a>
  <a href="/listings/new">
      <i class="fa-solid fa-plus"></i>
      <span>Create Stay</span>
  </a>
</div>
