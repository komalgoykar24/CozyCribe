<style>
/* Search Button */
.search-btn {
    background-color: #C70039;
    color: #fff;
    border-radius: 30px;
    padding: 0 1rem;
    display: flex; 
    align-items: center;
}

.search-btn:hover {
    background-color: #C70039;
    color: #fff;
}

.search-btn i {
    margin-right: 0.5rem;
}

/* Search Input */
.search-inp {
    border-radius: 25px;
    padding: 0.5rem 2rem;
    font-size: 0.9rem;
}

/* Sticky Bottom Navigation Bar */
.bottom-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: white;
    border-top: 1px solid #ddd;
    display: flex;
    justify-content: space-around;
    padding: 10px 0;
    box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
    z-index: 1000;
}

/* Bottom Navbar Links */
.bottom-nav a {
    text-align: center;
    color: black;
    text-decoration: none;
    font-size: 14px;
    flex: 1;
    padding: 8px 0;
}

.bottom-nav i {
    display: block;
    font-size: 18px;
}
@media (max-width: 768px) {
    .navbar-brand {
        display: none;
    }
    .search-inp {
        width: 100%; /* Full-width on mobile */
    }
}
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
      <!-- Left Logo -->
      <a class="navbar-brand" href="/listings">
          <img src="/images/Logo1.png" alt="CozyCrib Logo" width="150">
      </a>

      <!-- Center Search Bar -->
      <form class="d-flex needs-validation mx-auto" novalidate action="/search" method="GET">
          <input 
              class="form-control me-2 search-inp" 
              type="search" 
              name="q" 
              placeholder="Search destinations" 
              aria-label="Search"
              required
          >
          <div class="invalid-feedback">Destination is required</div>
          <button class="btn search-btn" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
      </form>

      <!-- Right Navigation Links -->
      <div class="navbar-nav ms-auto d-none d-md-flex ">
          <a class="nav-link" href="/listings">Explore</a>
          <a class="nav-link" href="/listings/new">Create a New Stay</a>

          <% if(!currUser){ %>
              <a class="nav-link" href="/signup"><b>SignUp</b></a>
              <a class="nav-link" href="/login"><b>LogIn</b></a>
          <% } %>

          <% if(currUser){ %>
              <a class="nav-link" href="/logout"><b>LogOut</b></a>
          <% } %>
      </div>
  </div>
</nav>

<!-- Sticky Bottom Navigation Bar (Only for Mobile) -->
<div class="bottom-nav d-md-none">
  <a href="/listings">
      <i class="fa-solid fa-compass"></i>
      <span>Explore</span>
  </a>
  <a href="/login">
      <i class="fa-solid fa-user"></i>
      <span>Login</span>
  </a>
  <a href="/listings/new">
      <i class="fa-solid fa-plus"></i>
      <span>Create Stay</span>
  </a>
</div>
